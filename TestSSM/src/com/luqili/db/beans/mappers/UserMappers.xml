<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.luqili.db.dao.UserDAO">
	
	<select id="selectUser" resultType="User">
		select * from public.user where id = #{id}
  	</select>
	<select id="selectUserByName" resultType="User">
		select * from public.user where username = #{name}
  	</select>
	<select id="selectUserLikeName" resultType="User">
	select * from public.user where username like #{name}
  	</select>
	<select id="selectUserNameAndSex" resultType="User">
		select * from public.user where username = #{name} and sex=#{sex}
  	</select>
  	<insert id="saveUser" parameterType="User" useGeneratedKeys="true" keyProperty="id" >
  		insert into public.user (username,password,page,sex) values (#{username},#{password},#{page},#{sex})
  	</insert>
  	

</mapper>