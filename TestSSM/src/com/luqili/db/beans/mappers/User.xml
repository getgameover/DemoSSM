<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.luqili.db.beans.User">

    <select id="selectUser" resultType="com.luqili.db.beans.User">
        select * from user where id = #{id}
    </select>
    <select id="selectUserByName"
        resultType="com.luqili.db.beans.User">
        select * from user where username = #{name}
    </select>
    <select id="selectUserLikeName"
        resultType="com.luqili.db.beans.User">
        select * from user where username like #{name}
    </select>
    <select id="selectUserNameAndSex"
        resultType="com.luqili.db.beans.User">
        select * from user where username = #{name} and sex=#{sex}
    </select>
    <insert id="saveUser" parameterType="com.luqili.db.beans.User" useGeneratedKeys="true" keyProperty="id">
        insert into user (username,password,page,sex) values
        (#{username},#{password},#{page},#{sex})
    </insert>

</mapper>